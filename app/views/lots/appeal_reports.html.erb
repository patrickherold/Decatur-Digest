<h1><%= @title %></h1>

<%= link_to 'New Appeal Test', appeal_path, :class => 'btn btn-success top-right-button' %>

<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th>Date</th>
    <th>Original Address</th>
    <th>Properties Similar by Building</th>
    <th>Properties Similar by Land</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @appeal_reports.each { |report| %>
      <tr>
        <th><%= l report.created_at, :format => :short %></th>
        <th><%= report.original_address %></th>
        <th>
          <% report.similar_by_building.each { |lot| %>
              <div><%= link_to lot.property_street, lot_path(lot) %></div>
          <% } %>
        </th>
        <th>
          <% report.similar_by_land.each { |lot| %>
              <div><%= link_to lot.property_street, lot_path(lot) %></div>
          <% } %>
        </th>
        <th>
          <%= link_to 'View / Refine', refine_appeal_path(:id => report.id), :class => 'btn btn-info btn-xs' %>
        </th>
      </tr>
  <% } %>
  </tbody>
</table>