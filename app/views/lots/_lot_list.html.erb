<%= paginate @properties %>


<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= sort_link @search, :property_map_address, "Property Address" %></th>
      <th class="hidden-phone"><%= sort_link @search, :owner, "Owner Name" %></th>
      <th class="hidden-phone"><%= sort_link @search, :land_value, "Land Value" %></th>
      <th><%= sort_link @search, :appraised_value, "Appraised Value" %></th>
      <th><%= sort_link @search, :appeal_value, "Appeal Value" %></th>
      <th><%= sort_link @search, :zoning, "Zoning" %></th>
      <th class="hidden-phone"><%= sort_link @search, :homestead, "Homestead" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @properties.each do |lot| %>
        <tr>
        <td><%= lot.mailing_street if lot.mailing_street.present? %></td>
        <td class="hidden-phone"><%= lot.owners_name if lot.owner.present? %></td>
        <td class="hidden-phone"><%= number_to_currency(lot.land_value, :unit => "$") %></td>
        <td><%= number_to_currency(lot.appraised_appraised, :unit => "$") %></td>
        <% if lot.appeal_value.to_i > 1 %>
          <td><div class="btn btn-danger hidden-phone"><%= number_to_currency(lot.appeal_value, :unit => "$") %></div></td>
        <% else %>
          <td><%= number_to_currency(lot.appeal_value, :unit => "$") %></td>
        <% end %>
        <td><%= lot.zoning %></td>
        <td class="hidden-phone"><%= lot.homestead %></td>
        <td><%= link_to "Details", lot_path(lot), :class => "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>