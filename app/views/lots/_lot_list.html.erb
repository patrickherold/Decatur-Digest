

<div class="panel panel-success" id="accordion">
  <div class="panel-heading panel-title">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
      <h3>Property List (sortable)</h3>
      <p>Click to open and close sort list</p>
    </a>
  </div>
  <div id="collapseOne" class="panel-collapse collapse in">
  <div class="panel-body panel-primary searchpadding">
    <%= paginate @properties %>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Property Address</th>
          <th class="hidden-phone"><%= sort_link @search, :owner, "Owner Name" %></th>
          <th class="hidden-phone"><%= sort_link @search, :land_value, "Land Value" %></th>
          <th><%= sort_link @search, :appraised_value, "Appraised Value" %></th>
          <th class="hidden-phone"><%= sort_link @search, :appeal_value, "Appeal Value" %></th>
          <th class="hidden-phone"><%= sort_link @search, :zoning, "Zoning" %></th>
          <th class="hidden-phone"><%= sort_link @search, :homestead, "Homestead" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @properties.each do |lot| %>
            <tr>
            <td><%= lot.property_street if lot.property_map_address.present? %></td>
            <td class="hidden-phone"><%= lot.owners_name if lot.owner.present? %></td>
            <td class="hidden-phone"><%= number_to_currency(lot.land_value, :unit => "$") %></td>
            <td><%= number_to_currency(lot.appraised_appraised, :unit => "$") %></td>
            <% if lot.appeal_value.to_i > 1 %>
              <td class="hidden-phone"><div class="btn btn-danger hidden-phone"><%= number_to_currency(lot.appeal_value, :unit => "$") %></div></td>
            <% else %>
              <td class="hidden-phone"><%= number_to_currency(lot.appeal_value, :unit => "$") %></td>
            <% end %>
            <td class="hidden-phone"><%= lot.zoning %></td>
            <td class="hidden-phone"><%= lot.homestead %></td>
            <td><%= link_to "Details", lot_path(lot), :class => "btn btn-info btn-mini" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>
