<%= render :partial => "/lots/search" %>
<% unless params[:q].present? %>
<div class="row">
  <div class="col-lg-4">
    <%= gmaps4rails(@json) %>
  </div>


<div class="col-lg-8"> 
  <div class="row">
    <div class="col-lg-6">
      <%= @taxes_by_type %>
    <div id="graph3" style="width: 100%; height: 350px;"></div>
    </div>
    <div class="col-lg-6">
      <%= @taxes_by_zoning %>
    <div id="graph2" style="width: 100%; height: 350px;"></div>
    </div>
    </div>
    <div class="row">
    <div class="col-lg-12">
      <%= @taxes_lost_chart %>
    <div id="graph" style="width: 100%; height: 200px;"></div>
    </div>
  </div>
</div>
</div>
<hr>
<div class="row">
<div class="col-lg-12"> 
<div class="panel-group" id="accordion">
  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="panel-title">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseSummary">
          <h3>Decatur Total Tax Summary</h3>
          <p>click to view commercial tax digest summary</p>
        </a>
      </div>
    </div>
    <div id="collapseSummary" class="panel-collapse collapse">
      <div class="panel-body">
        <div class="col-lg-12">
          <div class="col-lg-4">
            Total Taxable Properties:
          </div>
          <div class="col-lg-8  textright">
            <%= number_with_delimiter(Lot.find(:all).count, :delimiter => ",")  %>
          </div>

          <div class="col-lg-4">
            Total Digest Appraised Value:
          </div>
          <div class="col-lg-8 textright">
            <%= number_to_currency(@all_lots, :unit => "$") %>
          </div>

          <div class="col-lg-8">
            Total Commercial Digest as Appraised:
          </div>
          <div class="col-lg-4 textright">
            <%= number_to_currency(@commericial_digest, :unit => "$") %>
          </div>

          <div class="col-lg-8">
            Commercial Digest Appraisal Accepted:
          </div>
          <div class="col-lg-4 textright">
            <%= number_to_currency(@commericial_appraised, :unit => "$") %>
          </div>

          <div class="col-lg-8">
            Commercial Digest Appraisal Appealed:
          </div>
          <div class="col-lg-4 textright">
            <%= number_to_currency(@commericial_appeal, :unit => "$") %>
          </div>

          <div class="col-lg-8">
            Commercial Digest Lost to Appeal:
          </div>
          <div class="col-lg-4 textright">
            <b><%= number_to_currency(@commericial_lost_to_appeal, :unit => "$") %></b>
          </div>

          <div class="col-lg-8">
            Commercial Digest Taxable Value:
          </div>
          <div class="col-lg-4 textright">
            <%= number_to_currency(@commericial_taxable, :unit => "$") %>
          </div>
          <hr>

          <div class="col-lg-8">
            <h6>Annual City Taxes Lost to Appeal:</h6>
          </div>
          <div class="col-lg-4 textright btn btn-danger btn-mini">
            <%= number_to_currency(@city_commericial_tax_lost_to_appeal, :unit => "$") %>
          </div>

          <div class="col-lg-8">
            <h6>Annual School Taxes Lost to Appeal:</h6>
          </div>
          <div class="col-lg-4 textright btn btn-danger btn-mini">
            <%= number_to_currency(@school_commericial_tax_lost_to_appeal, :unit => "$") %>
          </div>

          <div class="col-lg-8">
            <h5>Total Annual Tax Lost to Appeal:</h5>
          </div>
          <div class="col-lg-4 textright btn btn-danger">
            <%= number_to_currency(@total_commericial_tax_lost_to_appeal, :unit => "$") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
<hr>
  

