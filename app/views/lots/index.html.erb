  <div class="span5">
    <%= gmaps4rails(@json) %>
  </div>
  <div class="span7">
    <h3>Property Tax Summary</h3>

    <div class="span4">
      Total Taxable Properties:
    </div>
    <div class="span2 textrigt">
      <%= number_with_delimiter(Lot.find(:all).count, :delimiter => ",")  %>
