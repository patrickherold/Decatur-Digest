<%= form_for @lot, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :tax_district, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tax_district, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :homestead, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :homestead, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :land_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :land_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :building_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :building_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :appraised_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :appraised_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :appeal_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :appeal_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :taxable, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :taxable, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tax_year, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tax_year, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :property_street_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :property_street_number, :class => 'text_field' %>
    </div>
  </div>















  <div class="control-group">
    <%= f.label :owner, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :owner, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lots_path, :class => 'btn' %>
  </div>
<% end %>
