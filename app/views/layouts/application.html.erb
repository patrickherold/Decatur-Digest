<!DOCTYPE html>
<html lang="en">
<head>
  <title>Property Tax Explorer</title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "gmaps4rails" %>
  <%= stylesheet_link_tag "bootstrap", media: "all" %>
  <%= stylesheet_link_tag "application", media: "all" %>

  <%= yield :head %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="brand" href="/"><h1>Property Tax Explorer</h1></a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav">
      <li><%= link_to "List All Properties", "/lots/" %></li>
      <% if user_signed_in? %>
          <li><%= link_to "#{current_user.email}", "#" %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      <% else %>
          <% if Rails.env == 'development' %>
              <li>
                <div class="dev-login">
                  <%= select_tag 'dev_login', options_from_collection_for_select(User.all, :id, :name), { :prompt => 'Choose user to login as...', :onchange => "window.location = '#{development_login_path}?id=' + this.value;" } %>
                </div>
              </li>
          <% else %>
              <li><%= link_to image_tag("/assets/LoginWithFacebook.png", :width => "150px"), user_omniauth_authorize_path(:facebook) %></li>
          <% end %>
      <% end %>
    </ul>
  </div>
  <!-- /.navbar-collapse -->
</nav>


<div class="container page">

  <% if notice.present? %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= notice %>
      </div>
  <% end %>

  <%= yield %>

</div>

<%= yield :scripts %>
<script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-40264196-3', 'propertytaxexplorer.com');
    ga('send', 'pageview');

</script>
<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s);
    js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=533821743358189";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
</body>
</html>


