<!DOCTYPE html>
<html>
<head>
  <title>Property Tax Explorer</title>
  <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "gmaps4rails" %>
  <%= yield :head %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
  a.btn {
    color: white !important;
  }
  </style>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/lots/">Property Tax Explorer</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "All Properties", "/lots/" %></li>
            <% if user_signed_in? %>
              <li><%= link_to "#{current_user.email}", current_user.email %></li>
              <li><%= link_to 'Edit profile', edit_user_registration_path %> </li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %> </li>
              <li><%= link_to "Login in with Twitter", user_omniauth_authorize_path(:twitter) %></li>
              <li><%= link_to "Login", new_user_session_path %></li>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container">
    <div class="container">
      <% if notice.present? %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= notice %>
        </div>
      <% end %>
    </div>
    <%= render :partial => "search" %>

    <%= yield %>

    <%= render :partial => "lot_list" %>
</div>
<%= yield :scripts %>
</body>
</html>


