<h1>Property Workflows</h1>

<p>This property <u><%= link_to @lot.property_street.strip, lot_path(@lot) %></u> appears in the following workflows:
</p>

<%= form_tag do %>
    <div class="workflows-column">
      <div><b>My Workflows</b></div>
      <% current_user.workflows.each { |workflow| %>
          <div>
          <label>
            <%= check_box_tag 'workflows[]', workflow.id, workflow.lots.include?(@lot) %>
            <%= workflow.name %>
          </label>
          </div>
      <% } %>
    </div>
    <div class="workflows-column">
      <div><b>Managed Workflows</b></div>
      <% current_user.managed_workflows.each { |workflow| %>
          <div>
          <label>
            <%= check_box_tag 'workflows[]', workflow.id, workflow.lots.include?(@lot) %>
            <%= workflow.name %>
          </label>
          </div>
      <% } %>
    </div>
    <div class="clearfix"></div>
    <%= submit_tag 'Save Changes', :class => 'btn btn-success' %>
<% end %>