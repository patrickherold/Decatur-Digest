<h1><%= @workflow.name %> - Workflow Details</h1>

<p><%= @workflow.description %></p>

<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th>Property Address</th>
    <th>Owner Name</th>
    <th>Land Value</th>
    <th>Appraised</th>
    <th>Appeal Value</th>
    <th>Zoning</th>
    <th>Homestead</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @workflow.lots.each { |lot| %>
      <tr>
        <td><%= lot.property_street if lot.property_street_and_number.present? %></td>
        <td><%= lot.owners_name if lot.owner.present? %></td>
        <td><%= number_to_currency(lot.land_value, :unit => "$", :precision => 0) %></td>
        <td><%= number_to_currency(lot.appraised_appraised, :unit => "$", :precision => 0) %></td>
        <% if lot.appeal_value.to_i > 10 %>
            <td>
              <div class="btn btn-danger btn-xs"><%= number_to_currency(lot.full_appeal, :unit => "$", :precision => 0) %></div>
            </td>
        <% else %>
            <td><%= number_to_currency(lot.full_appeal, :unit => "$", :precision => 0) %></td>
        <% end %>
        <td><%= lot.zoning %></td>
        <td><%= lot.homestead %></td>
        <td>
          <%= link_to 'View', lot_path(lot), :class => 'btn btn-info btn-xs' %>
          <%= link_to 'Remove from workflow', remove_from_workflow_path(@workflow, lot), :confirm => 'Are you sure?', :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% } %>
  </tbody>
</table>

<% if @workflow.user == current_user %>
    <%= link_to 'Edit', edit_workflow_path(@workflow), :class => 'btn btn-warning' %>
    &nbsp;
    <%= link_to 'Delete', delete_workflow_path(@workflow), :class => 'btn btn-danger' %>
<% end %>
