
<%= link_to "Back", :back, :class => "btn btn-inverse" %>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
<h2><%= @user.name %></h2>
<%= f.button :submit, "Update", :class => "btn-success floatright" %>
<hr>
<div class="formbody">
<div class="row">

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :autofocus => true, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :birthdate, as: :date, start_year: Date.today.year - 100,
                                  end_year: Date.today.year - 5, discard_day: true,
                                  order: [:month, :year] %>
    <%= f.input :income_cents, as: :currency %>
    <%= f.input :disabled_veteran %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
  </div>
</div>
</div>
<% end %>
<hr>
<h3>Cancel my account</h3>

<p><%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure? You'll loose all your data and your portfolio!" }, :method => :delete, :class => "btn btn-danger btn-mini" %></p>
