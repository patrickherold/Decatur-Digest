<% if current_user.name == "Patrick Herold" %>
<h1>Users</h1>
<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th></th>
    <th><%= sort_link @search, :name, "Name" %></th>
    <th class="visible"><%= sort_link @search, :email, "Email" %></th>
    <th class="visible-md visible-lg"><%= sort_link @search, :sign_in_count, "# of Logins" %></th>
    <th class="visible-lg"><%= sort_link @search, :current_sign_in_at, "Signed in at" %></th>
    <th class="visible-lg"><%= sort_link @search, :current_sign_in_ip, "Location" %></th>
  </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
      <tr>
        <td><img src='<%= user.fb_picture if user.fb_picture.present? %>'></td>
        <td><%= user.name %></td>
        <td class="visible"><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
        <td class="visible"><%= user.sign_in_count %></td>
        <td class="visible-lg"><%= user.current_sign_in_at.to_formatted_s(:long_ordinal) %> UTC</td>
        <td class="visible-lg"><%= user.current_sign_in_ip %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>

